<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout
        android:id="@+id/songinfoov"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:layout_above="@+id/songcontrols"
        android:layout_alignParentBottom="false"
        android:layout_marginBottom="2dip"
        android:layout_marginRight="4dip"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/albumArt"
        android:layout_toEndOf="@+id/albumArt">
 <LinearLayout
android:id="@+id/songinfo"
android:layout_width="wrap_content"
android:layout_height="48dip"
android:layout_above="@+id/songcontrols"
android:layout_alignParentBottom="false"
android:layout_marginBottom="2dip"
android:layout_marginLeft="4dip"
android:layout_marginRight="4dip"
android:orientation="vertical">
<TextView
    android:id="@+id/infoSongTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Play a song"/>



     <TextView
         android:id="@+id/infoAlbumTitle"
         android:layout_width="wrap_content"
         android:layout_height="fill_parent"
         android:text="Play a song"/>
</LinearLayout>
    </LinearLayout>
<LinearLayout
android:id="@+id/songcontrols"
android:layout_width="match_parent"
android:layout_height="48dip"
android:layout_alignParentBottom="true"
android:layout_marginBottom="2dip"
android:layout_marginLeft="4dip"
android:layout_marginRight="4dip"
android:orientation="horizontal" >
<ImageView
    android:id="@+id/prev"
    android:layout_width="0dip"
    android:layout_height="match_parent"
    android:layout_margin="4dip"
    android:layout_weight="1"
    android:tag="prev"
    android:onClick="onControlClicked"
    android:src="@drawable/prev" />
<ImageView
    android:id="@+id/rewind"
    android:layout_width="0dip"
    android:layout_height="match_parent"
    android:layout_margin="4dip"
    android:layout_weight="1"
    android:tag="rewind"
    android:onClick="onControlClicked"
    android:src="@drawable/rewind" />
<ImageView
    android:id="@+id/stop"
    android:layout_width="0dip"
    android:layout_height="match_parent"
    android:layout_margin="4dip"
    android:layout_weight="1"
    android:tag="stop"
    android:onClick="onControlClicked"
    android:src="@drawable/stop" />
<ImageView
    android:id="@+id/forward"
    android:layout_width="0dip"
    android:layout_height="match_parent"
    android:layout_margin="4dip"
    android:layout_weight="1"
    android:tag="forward"
    android:onClick="onControlClicked"
    android:src="@drawable/forward" />
<ImageView
    android:id="@+id/next"
    android:layout_width="0dip"
    android:layout_height="match_parent"
    android:layout_margin="4dip"
    android:layout_weight="1"
    android:tag="next"
    android:onClick="onControlClicked"
    android:src="@drawable/next" />
